<% layout('./layouts/boilerplate') %>

    <div class="container my-5">
        <div class=" col-md-6 offset-md-3 col-lg-4 offset-lg-4 ">
            <div class="row card shadow">
                <div class="card-body">
                    <img src="https://images.unsplash.com/photo-1537225228614-56cc3556d7ed?ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&ixlib=rb-1.2.1&auto=format&fit=crop&w=1050&q=80" alt="" class="card-img-top">
                    <h2 class="card-title mx-2">
                        Login
                    </h2>
                    <form action="/login" method="post" novalidate class="validated-form">
                        <div class="mb-3">
                            <label class="form-label" for="username">Username</label>
                            <input class="form-control" type="text" name="username" id="username " autofocus equired>
                            <div class="invalid-feedback ">
                                Please fill the Username.
                            </div>
                            <div class="mb-3">
                                <label class="form-label" for="password">Password</label>
                                <input class="form-control" type="password" name="password" id="password " required>
                                <div class="invalid-feedback ">
                                    Please fill the Password.
                                </div>
                            </div>
                            <div class="d-grid gap-2">
                                <button class="btn btn-primary" type="submit">Login</button>
                            </div>
                    </form>
                    </div>
                </div>
            </div>
        </div>