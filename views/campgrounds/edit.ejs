<% layout('./layouts/boilerplate') %>
    <div class="row">
        <h1 class="text-center">Edit
            <%= campground.title %>
        </h1>
        <div class="col-6 offset-3">
            <form action="/campgrounds/<%=campground._id%>/edit?_method=PUT" method="POST" novalidate class="validated-form">
                <div class="mb-3">
                    <label class="form-label" for="title">Title</label>
                    <input class="form-control" type="text" name=campground[title] " id="title " value="<%=campground.title%>" required>
                    <div class="invalid-feedback">
                        Please fill the title.
                    </div>
                </div>
                <div class="mb-3 ">
                    <label class="form-label " for="location ">Location</label>
                    <input class="form-control " type="text " name=campground[location] " id="location " value="<%=campground.location%>" required>
                    <div class="invalid-feedback">
                        Please provide valid city.
                    </div>
                </div>
                <div class="mb-3 ">
                    <label class="form-label " for="image ">Image</label>
                    <input class="form-control " type="text " name=campground[image] " id="image " value="<%=campground.image%>" required>
                    <div class="invalid-feedback">
                        Please provide valid url image.
                    </div>
                </div>
                <div class="input-group mb-3 ">
                    <span class="input-group-text " id="basic-addon1 ">$</span>
                    <input type="text " class="form-control " placeholder="0.00 " aria-label="price " aria-describedby="basic-addon1 " value="<%=campground.price%>" name="campground[price]" required>
                    <div class="invalid-feedback">
                        Please provide price.
                    </div>
                </div> required
                <div class="mb-3 ">
                    <label class="form-label " for="description ">Description</label>
                    <textarea class="form-control " type="text " name=campground[description] " id="description " required><%=campground.description%></textarea>
                    <div class="invalid-feedback ">
                        Please fill  the description.
                    </div>
                </div>
                <button class="btn btn-info mb-3 ">Update Campground</button>
            </form>

            <footer>
                <a class="btn btn-warning " href="/campgrounds/<%=campground._id%>">Back</a>
                    </footer>
                </div>
        </div>