<% layout('./layouts/boilerplate') %>
    <div class="row">
        <h1 class="text-center">New Campground</h1>
        <div class="col-6 offset-3">
            <form action="/campgrounds" enctype="multipart/form-data" method="POST" novalidate class="validated-form">
                <div class="mb-3">
                    <label class="form-label" for="title">Title</label>
                    <input class="form-control" type="text" name="title" id="title " required>
                    <div class="invalid-feedback">
                        Please fill the title.
                    </div>
                </div>
                <div class="mb-3 ">
                    <label class="form-label" for="location">Location</label>
                    <input class="form-control" type="text" name="location" id="location" required>
                    <div class="invalid-feedback">
                        Please provide valid city.
                    </div>
                </div>

                <div class="mb-3">
                    <input type="file" name="image" multiple>
                    <!-- <label class="form-label " for="image ">Image</label>
                    <input class="form-control " type="text " name=campground[image] " id="image " required>
                    <div class="invalid-feedback ">
                        Please provide valid url image.
                    </div> -->
                </div>
                <div class="input-group mb-3 ">
                    <label for="price " class="price "></label>
                    <span class="input-group-text " id="basic-addon1 ">$</span>
                    <input type="number " class="form-control " placeholder="0.00 " aria-label="price " id="price " aria-describedby="basic-addon1 " name="price" required>
                    <div class="invalid-feedback ">
                        Please fill price.
                    </div>
                </div>
                <div class="mb-3 ">
                    <label class="form-label " for="description ">Description</label>
                    <textarea class="form-control " type="text " name="description" id="description " required></textarea>
                    <div class="invalid-feedback ">
                        Please fill description.
                    </div>
                </div>
                <button class="btn btn-success mb-3 ">Add Campground</button>
            </form>

            <footer>
                <a class="btn btn-primary " href="/campgrounds ">All Campgrounds</a>
            </footer>
        </div>
    </div>