<% layout('./layouts/boilerplate') %>
    <div class="row mb-5">
        <div class="col-6" mb-5>
            <div class="card">
                <img src=" <%= campground.image %>" alt=" <%= campground.title %>" class="card-img-top">
                <div class="card-body">
                    <h5 class="card-title">
                        <%= campground.title %>
                    </h5>
                    <p class="card-text">
                        <%= campground.description %>
                    </p>
                </div>
                <ul class="list-group list-group-flush">
                    <li class="list-group-item"><small class="text-muted"><%= campground.location %></small></li>
                    <li class="list-group-item">
                        <b class="text-muted">Submited By:
                            <%= campground.author.username %>
                        </b>
                    </li>
                    <li class="list-group-item">$
                        <%=campground.price%>/night
                    </li>
                </ul>
                <div class="card-body">
                    <a class="btn btn-primary" href="/campgrounds">All Campgrounds</a>
                    <% if(currentUser && campground.author.equals(currentUser)){ %>
                        <a class="btn btn-warning text-white" href="/campgrounds/<%= campground._id %>/edit ">Edit</a>
                        <form class="d-inline" action="/campgrounds/<%= campground._id %>/delete?_method=DELETE" method="POST">
                            <button class="btn btn-md btn-danger">Delete</button>
                        </form>
                        <% } %>
                </div>
                <div class="card-footer text-muted">
                    2 days ago
                </div>
            </div>
        </div>
        <div class="col-6">
            <% if(currentUser){ %>
                <div class="mx-2 my-3">
                    <h4 class="form-label">Leave a Review</h4>
                    <form action="/campgrounds/<%= campground._id%>/reviews" novalidate class="validated-form" method="POST">
                        <div class="mb-2">
                            <label for="rating" class="form-lebel">Rating: </label>
                            <input type="range" name="review[rating]" class="form-range" max="5" min="0">
                        </div>
                        <div class="mb-3">
                            <label for="body" class="form-lebel">Review: </label>
                            <textarea name="review[body]" id="body" cols="30" rows="5" class="form-control" required></textarea>
                        </div>
                        <button class="btn  btn-success">Submit</button>
                    </form>
                </div>
                <% } %>
                    <% for(let review of campground.reviews){ %>
                        <div class="card  my-3">
                            <div class="card-body mb-3">
                                <h5 class="card-title">Rating:
                                    <%= review.rating %>
                                </h5>
                                <h6 class="card-subtitle mb-2 text-muted">
                                    By
                                    <%= review.author.username %>
                                </h6>
                                <p class="card-text">
                                    <%= review.body %>
                                </p>
                                <% if(currentUser && review.author.equals(currentUser)){ %>
                                    <form action="/campgrounds/<%= campground._id %>/reviews/<%=review._id %>?_method=DELETE" method="POST">
                                        <button class="btn btn-sm btn-danger">Delete</button>
                                    </form>
                                    <% } %>
                            </div>

                        </div>
                        <% } %>
        </div>
    </div>